<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <!-- 填充-->
            <solid android:color="#FFFFFF"/>
            <!-- 描边 -->
            <stroke
                android:width="3dp"
                android:color="@color/theme"/>
            <!-- 圆角 -->
            <corners
                android:radius="3dp" />
        </shape>
    </item>
</selector>