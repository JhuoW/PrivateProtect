<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/newsbg_listpage" >

    <LinearLayout
        android:id="@+id/article_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="8.0dip"
        android:paddingTop="10.0dip" >

        <RelativeLayout
            android:id="@+id/article_top_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/title_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="7.0dip" >

                <ImageView
                    android:id="@+id/right_image"
                    android:layout_width="86dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="4.0dip"
                    android:layout_marginTop="3.0dip"
                    android:background="@drawable/small_image_holder_listpage"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/right_image"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="title"
                    android:textColor="#444444"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/item_des"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_title"
                    android:layout_toLeftOf="@id/right_image"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:paddingRight="4dp"
                    android:text="title"
                    android:textColor="#888888"
                    android:textSize="15sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/info_layout"
                android:layout_width="fill_parent"
                android:layout_height="30.0dip"
                android:layout_below="@id/title_layout"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/item_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.0"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="source"
                    android:textColor="#999999"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/item_study"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0.0"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="source"
                    android:textColor="#999999"
                    android:textSize="11sp" />

                <View
                    android:layout_width="0.0dip"
                    android:layout_height="1.0dip"
                    android:layout_weight="1.0"
                    android:minWidth="8.0dip" />

                <TextView
                    android:id="@+id/publish_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="0.0"
                    android:paddingRight="8.0dip"
                    android:text="1234"
                    android:textColor="#999999"
                    android:textSize="11sp" />
            </LinearLayout>

            <View
                android:id="@+id/popicon_anchor"
                android:layout_width="1.0dip"
                android:layout_height="5.0dip"
                android:layout_alignBottom="@id/title_layout"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>